<Window x:Class="BudgetSys.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetSys"
        mc:Ignorable="d"
        Title="SaveWindow" Height="153.879" Width="496.121"   WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock  TextWrapping="Wrap" Text="批次号"  HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="0,0,10,0"
                     TextAlignment="Left"   
                     Text="{Binding Path=batchNo, Mode=TwoWay}"
                     />
            <Button Content="保存" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="75" RenderTransformOrigin="0.006,0.344" Click="Button_Click"  />
            <Button Content="取消" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="75" RenderTransformOrigin="0.006,0.344" Click="Button_Click_1" Margin="10,0,0,0" />
        </StackPanel>

    </Grid>
</Window>
